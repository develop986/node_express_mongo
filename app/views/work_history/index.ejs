<div class="nav-align row">
  <div class="col-sm-3">
    <a href="/work_history/new">管理用</a>
  </div>
  <div class="col-sm-6">
    <h4>作業管理</h4>
  </div>
  <div class="col-sm-3">
  </div>
</div>
<table class="table">
  <thead>
    <tr>
      <th>履歴Id</th>
      <th>ユーザー</th>
      <th>作業項目</th>
      <th>開始時間</th>
      <th>終了時間</th>
      <th>作成時間</th>
      <th>更新時間</th>
      <th>修正</th>
      <th>削除</th>
    </tr>
  </thead>
  <tbody>
    <% work_history.forEach(work_history=> { %>
      <tr>
        <td>
          <%= work_history._id %>
        </td>
        <td>
          <% users.forEach(user=> { %>
            <% if (user._id.valueOf()===work_history.user._id.valueOf()) { %>
              <%= user.account %>
                <% } %>
                  <% }); %>
        </td>
        <td>
          <% works.forEach(work=> { %>
            <% if (work._id.valueOf()===work_history.work._id.valueOf()) { %>
              <%= work.name %>
                <% } %>
                  <% }); %>
        </td>
        <td>
          <%= work_history.work_start.toLocaleString() %>
        </td>
        <td>
          <% if (work_history.work_end !=null) { %>
            <%= work_history.work_end.toLocaleString() %>
              <% } %>
        </td>
        <td>
          <%= work_history.createdAt.toLocaleString() %>
        </td>
        <td>
          <%= work_history.updatedAt.toLocaleString() %>
        </td>
        <td>
          <a href="<%= `/work_history/${work_history._id}/edit`%>">管理用</a>
        </td>
        <td>
          <a href="<%= `/work_history/${work_history._id}/delete?_method=DELETE` %>"
            onclick="return confirm('Are you sure you want to delete this record?')" a>管理用</a>
        </td>
      </tr>
      <% }); %>
  </tbody>
</table>